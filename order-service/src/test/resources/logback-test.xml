<?xml version="1.0"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{dd/MM/yyyy HH:mm:ss}) %highlight(%-5level) %magenta(%logger{30}) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.kmdev.shoppingcart.order" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
